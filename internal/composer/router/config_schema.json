{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://trebent.com/kerberos/schemas/router_schema.json",
  "type": "object",
  "properties": {
    "backends": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the backend."
          },
          "host": {
            "type": "string",
            "description": "The host address of the backend."
          },
          "port": {
            "type": "integer",
            "description": "The port number of the backend."
          }
        },
        "required": [
          "name",
          "host",
          "port"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "backends"
  ],
  "additionalProperties": false
}