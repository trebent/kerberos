{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://trebent.com/kerberos/schemas/auth_schema.json",
  "type": "object",
  "properties": {
    "methods": {
      "type": "object",
      "properties": {
        "basic": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "scheme": {
      "type": "object",
      "properties": {
        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backend": {
                "type": "string"
              },
              "method": {
                "type": "string",
                "enum": [
                  "basic"
                ]
              },
              "exempt": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "required": [
              "backend",
              "method"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": [
        "mappings"
      ],
      "additionalProperties": false
    },
    "administration": {
      "type": "object",
      "properties": {
        "superUser": {
          "type": "object",
          "properties": {
            "clientId": {
              "type": "string",
              "default": "admin"
            },
            "clientSecret": {
              "type": "string",
              "default": "password"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "order": {
      "$ref": "http://trebent.com/kerberos/schemas/ordered_schema.json"
    }
  },
  "allOf": [
    {
      "if": {
        "required": [
          "methods"
        ]
      },
      "then": {
        "required": [
          "scheme"
        ]
      }
    },
    {
      "if": {
        "required": [
          "scheme"
        ]
      },
      "then": {
        "required": [
          "methods"
        ]
      }
    }
  ],
  "additionalProperties": false
}