{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "methods": {
      "type": "object",
      "properties": {
        "basic": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "scheme": {
      "type": "object",
      "properties": {
        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backend": {
                "type": "string"
              },
              "method": {
                "type": "string",
                "enum": ["basic"]
              }
            },
            "required": ["backend", "method"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": ["mappings"],
      "additionalProperties": false
    },
    "administration": {
      "type": "object",
      "properties": {
        "superUser": {
          "type": "object",
          "properties": {
            "clientId": {
              "type": "string"
            },
            "clientSecret": {
              "type": "string"
            }
          },
          "required": ["clientId", "clientSecret"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["methods", "scheme"],
  "additionalProperties": false
}
