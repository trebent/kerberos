{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://trebent.com/kerberos/schemas/auth_schema.json",
  "type": "object",
  "properties": {
    "methods": {
      "type": "object",
      "properties": {
        "basic": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "scheme": {
      "type": "object",
      "properties": {
        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backend": {
                "type": "string",
                "minLength": 1
              },
              "method": {
                "type": "string",
                "enum": [
                  "basic"
                ]
              },
              "exempt": {
                "type": "array",
                "description": "An array of path matching strings, or static paths. Matching is done according to https://pkg.go.dev/path#Match.",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "authorization": {
                "type": "object",
                "properties": {
                  "groups": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    },
                    "minItems": 1
                  },
                  "paths": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "backend",
              "method"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": [
        "mappings"
      ],
      "additionalProperties": false
    },
    "order": {
      "$ref": "http://trebent.com/kerberos/schemas/ordered_schema.json"
    }
  },
  "allOf": [
    {
      "if": {
        "required": [
          "methods"
        ]
      },
      "then": {
        "required": [
          "scheme"
        ]
      }
    },
    {
      "if": {
        "required": [
          "scheme"
        ]
      },
      "then": {
        "required": [
          "methods"
        ]
      }
    }
  ],
  "additionalProperties": false
}