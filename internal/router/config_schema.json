{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "backends": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the backend."
        },
        "host": {
          "type": "string",
          "description": "The host address of the backend."
        },
        "port": {
          "type": "integer",
          "description": "The port number of the backend."
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["backends"],
  "additionalProperties": false
}
